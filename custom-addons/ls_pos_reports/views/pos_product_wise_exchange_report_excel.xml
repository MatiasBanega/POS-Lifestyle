<odoo>
	<data>
		<record id="view_pos_order_wise_wzd_report" model="ir.ui.view">
			<field name="name">pos.wise.exchange.report</field>
			<field name="model">pos.product.exchange.report</field>
			<field name="arch" type="xml">
				<form string="POS Exchange Product Report">
					<group>
						<group>
							<field name="start_date" required="1"/>					
						</group>
						<group>
							<field name="end_date" required="1"/>					
						</group>
						
						
						<group>
							<field name="is_unusedbill" />					
						</group>
						<group>
							<field name="cashier_id" required="0" options="{'no_create': True, 'no_create_edit':True}" domain="company_id_domain"/>					
						</group>
						<group>
							<field name="company_id" required="1" options="{'no_create': True, 'no_create_edit':True}"/>					
						</group>
						<group>
							<field name="company_id_domain" invisible="1"/>					
						</group>
						
						
						
						<footer>
							<button name="print_pos_report" string="Show" type="object" class="oe_highlight" context="{'type':'appointments'}"/>
							<button string="Cancel" class="oe_link" special="cancel" />
						</footer>
					</group>
				</form>
			</field>
		</record>
		<record id="action_pos_report"  
			model="ir.actions.act_window">
			<field name="name">POS Wise Exchange Product Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pos.product.exchange.report</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record> 
		<record id="view_pos_excel_form_extended7" model="ir.ui.view">
			<field name="name">excel.extended.sale.form</field>
			<field name="model">excel.extended.pos.rep</field>
			<field name="arch" type="xml">
				<form string="Department Excel Report" create="false" edit="false">
					<group>
						<field name="name"/>
						<field name="excel_file" readonly="1" filename="file_name" />
						<field name="file_name" invisible="1" />
					</group>
				</form>
			</field>
		</record>
		<record id="action_excel_pos_form7" model="ir.actions.act_window">
			<field name="name">Report Excel</field>
			<field name="view_id" ref="view_pos_excel_form_extended7" />
			<field name="view_mode">form</field>
			<field name="res_model">excel.extended.pos.rep</field>
			<field name="target">new</field>
		</record>
		<record id="view_pos_screen_report" model="ir.ui.view">
			<field name="name">Department Wise Sales Report</field>
			<field name="model">pos.product.screen.wzd</field>
			<field name="arch" type="xml">
				<form string="Sales Excel Report" version="7.0"
					create="false" edit="false">
					<header>
						<button name="print_pos_orders_excel_report" type="object"
							string="Print Excel" />
						<button name="print_pos_wise_exchange_pdf_report" type="object"
							string="Print PDF" />
					</header>
					<sheet>
						<div class="oe_bold">
							<h1 class="oe_text_center">POS Product Exchange Report</h1>
						</div>
						<div class="oe_row oe_spaced">
							<h4>
								<h4>
								<p>
									Invoice From Date :
									<field name="start_date" /> 
									Invoice To Date :
									<field name="end_date" /> 
									Cashier : 
									<field name="cashier_id" /> 

									Show Unused Exchange Bill Only :
										<field name="is_unusedbill" />
										 <span class="o_unuse_bill_False" name="is_unusedbill"
 									attrs="{'invisible': [('is_unusedbill', '!=', False)]}">False</span>
								</p> 
							</h4>
							</h4>
						</div>
						 <group>
							<field name="pos_order_line" nolabel="1">
							<field name="name"/>
								<tree create="false" edit="false" delete="false">
								 <field name="exchange_bill" style="width:30%%" />
									<field  name="original_bill" style="width:30%%" />
									<field name="invoice_date"  style="width:30%%" />
									<field name="product_code" style="width:30%%" />
									<field name="product_name" style="width:30%%" />
									<field  name="brand" style="width:30%%" />
									<field name="item_type"  style="width:30%%" />
									<field name="product_design" style="width:30%%" />
									<field  name="product_color" style="width:30%%" />
									<field name="product_size"  style="width:30%%" />
									<field  name="exchange_qty" style="width:30%%" />
									<field name="original_billsp"  style="width:30%%" />
									<field name="line_total" style="width:30%%" />
									<field  name="balance_amt" style="width:30%%" />
									<field name="cashier"  style="width:30%%" />
									<field name="terminal" style="width:30%%" />
									<field  name="sales_rep" style="width:30%%" />
						
									 
								</tree>
							</field>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- <record id="action_func_call" model="ir.actions.server">
        <field name="name">Function Calll</field>
        <field name="model_id" ref="model_pos_product_exchange_report"/>
        
        <field name="state">code</field>

        <field name="code">
            action = model.master_call()
        </field>
    </record> -->
		
	<menuitem action="action_pos_report"
			id="menu_action_pos_report" 
			parent="ls_pos_reports.menu_ls_pos_report"
			sequence="13" 
			name="POS Product Exchange Report" /> 
	</data>
</odoo>
